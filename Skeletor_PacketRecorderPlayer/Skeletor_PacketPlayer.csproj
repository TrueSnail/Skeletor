<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <RunPostBuildEvent>Always</RunPostBuildEvent>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="Recordings\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Tomlyn.Signed" Version="0.19.0" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Config.toml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Recordings\Test.json">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="md &quot;$(ProjectDir)$(OutDir)Recordings&quot;&#xD;&#xA;xcopy /y /s &quot;$(ProjectDir)Recordings&quot; &quot;$(ProjectDir)$(OutDir)Recordings&quot;" />
  </Target>

</Project>
